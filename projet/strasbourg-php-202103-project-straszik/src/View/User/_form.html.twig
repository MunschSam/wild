<form method="post">

    <input type="hidden" value="{{ user.id }}" name="id"><br>
    <label for="name"> Nom de l'user :</label><br>
    <input type="text" value="{{ user.name }}" name="name" required><br>

    <label for="lastname"> lastname de l'user :</label><br>
    <input type="text" value="{{ user.lastname }}" name="lastname" required><br>

    <label for="mail"> mail de l'user :</label><br>
    <input type="email" value="{{ user.mail }}" name="mail" required><br>
    
    <label for="age"> age de l'user :</label><br>
    <input type="number" value="{{ user.age }}" name="age" required><br>

    <label for="pass"> pass de l'user :</label><br>
    <input type="password" value="{{ user.pass }}" name="pass" required><br>

    <input type="submit" value="Valider">
</form>