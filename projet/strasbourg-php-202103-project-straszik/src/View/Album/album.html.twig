{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Albums</h1>
    <ul>
        {% for album in albums %}
            <li>{{ album.name }}</li>
        {% endfor %}
    </ul>
    <a class="link_album" href="/Album/add">Ajouter</a>
    <a class="link_album" href="/Album/show/{{ album.id }}">Modifier</a>
    <a class="link_album" href="/Album/delete/{{album.id}}">Supprimer</a>
{% endblock %}